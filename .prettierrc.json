{
	"useTabs": true,
	"tabWidth": 4,
	"endOfLine": "lf",
	"printWidth": 90,
	"semi": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"singleQuote": true,
	"quoteProps": "consistent",
	"arrowParens": "always",
	"overrides": [
		{
			"files": ["*.md"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
